<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/babyOrderInfo"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Baby Order"
        android:textSize="18dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/babyNameInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:text="Baby Name"
        android:textSize="18dp"/>


        <TextView
            android:id="@+id/babyBirthInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baby Birth"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/babyBloodInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baby Blood"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/babyGenderInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="18dp"
        android:text="Baby Gender"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보유중인 피부 질환 및 과거 이력"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="#D5E9F9">
        <TextView
            android:id="@+id/babyDetailInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Detail"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>